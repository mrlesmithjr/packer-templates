{
  "builders": [
    {
      "boot_command": [
        "1<enter>",
        "<wait5><tab><enter><wait>",
        "<wait10><spacebar><enter>O<wait>",
        "<enter>",
        "{{ user `ssh_password` }}<tab>{{ user `ssh_password` }}<tab><enter>",
        "<enter><enter>",
        "<wait60><wait60><wait60>",
        "<enter>",
        "3<enter>",
        "<wait60><wait60><wait60><wait60><wait60>",
        "9<enter>",
        "curl -X PUT -u {{ user `ssh_username` }}:{{ user `ssh_password` }} -H 'Content-Type: application/json' -d '{\"ssh_rootlogin\": true}' http://localhost/api/v1.0/services/ssh/<enter>",
        "curl -X PUT -u {{ user `ssh_username` }}:{{ user `ssh_password` }} -H 'Content-Type: application/json' -d '{\"srv_enable\": true}' http://localhost/api/v1.0/services/services/ssh/<enter>"
      ],
      "boot_wait": "30s",
      "cpus": "{{ user `vcpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_mode": "disable",
      "guest_os_type": "FreeBSD_64",
      "hard_drive_interface": "{{ user `disk_adapter_type` }}",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "shutdown -p now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "60m",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "createhd",
          "--format",
          "VDI",
          "--filename",
          "disk2.vdi",
          "--size",
          "{{ user `disk_size` }}"
        ],
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl",
          "SCSI Controller",
          "--port",
          "1",
          "--device",
          "0",
          "--type",
          "hdd",
          "--medium",
          "disk2.vdi"
        ]
      ],
      "vm_name": "{{ user `vm_name` }}-{{ timestamp }}"
    },
    {
      "boot_command": [
        "1<enter>",
        "<wait5><tab><enter><wait>",
        "<wait10><spacebar><enter>O<wait>",
        "<enter>",
        "{{ user `ssh_password` }}<tab>{{ user `ssh_password` }}<tab><enter>",
        "<enter>",
        "<wait60><wait60><wait60>",
        "<enter>",
        "3<enter>",
        "<wait60><wait60><wait60><wait60><wait60>",
        "9<enter>",
        "curl -X PUT -u {{ user `ssh_username` }}:{{ user `ssh_password` }} -H 'Content-Type: application/json' -d '{\"ssh_rootlogin\": true}' http://localhost/api/v1.0/services/ssh/<enter>",
        "curl -X PUT -u {{ user `ssh_username` }}:{{ user `ssh_password` }} -H 'Content-Type: application/json' -d '{\"srv_enable\": true}' http://localhost/api/v1.0/services/services/ssh/<enter>"
      ],
      "boot_wait": "30s",
      "cpus": "{{ user `vcpus` }}",
      "disk_adapter_type": "{{ user `disk_adapter_type` }}",
      "disk_additional_size": ["{{ user `disk_size` }}"],
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": 0,
      "guest_os_type": "FreeBSD-64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-{{ build_type }}-{{ timestamp }}",
      "shutdown_command": "shutdown -p now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "60m",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}-{{ timestamp }}",
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": "{{ user `compression_level` }}",
        "output": "{{ user `vm_name` }}-{{.Provider}}-{{ timestamp }}.box",
        "type": "vagrant"
      },
      {
        "access_token": "{{ user `vagrant_cloud_token` }}",
        "box_tag": "{{ user `box_tag` }}",
        "type": "vagrant-cloud",
        "version": "{{ timestamp }}"
      },
      {
        "output": "manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ],
  "provisioners": [
    {
      "environment_vars": [
        "SSH_USER={{ user `ssh_username` }}",
        "SSH_PASS={{ user `ssh_password` }}"
      ],
      "scripts": ["scripts/freenas.sh"],
      "type": "shell"
    }
  ],
  "variables": {
    "boot_command_prefix": "",
    "box_tag": "",
    "compression_level": "6",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_url": "",
    "vagrant_cloud_token": "",
    "vagrant_cloud_username": "",
    "disk_adapter_type": "scsi",
    "disk_size": "36864",
    "memory": "1024",
    "vm_name": "",
    "ssh_password": "freenas",
    "ssh_username": "root",
    "vcpus": "1"
  }
}
